/* pages/addto/addto.wxss */
@import "/iconfont.wxss";
page{
  background-color: #fafafa;
}
.main{
  display: flex;
  flex-direction: column;
  width: 100%;
  justify-content: center;
  align-items: center;
  
}
.addto{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  margin-top: 10rpx;
}
/* 页面顶端的空白 */
/* .space{
  width: 360rpx;
  height: 75rpx;
} */
.title {
  width: 590rpx;
  height: 110rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-top: 20rpx;
}
.t1{
  width: 590rpx;
  height: 80rpx;
  color: #203152;
  font-family: "PingFangSC-Regular";
  font-size: 60rpx;
  font-weight: 400;
  line-height: 80rpx;
  text-align: center;
}
.t2{
  width: 590rpx;
  height: 30rpx;
  color: #7c8698;
  font-family: "PingFangSC-Regular";
  font-size: 24rpx;
  font-weight: 400;
  line-height: 30rpx;
  text-align: center;
}
.form {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  align-items: center;
  width: 670rpx;
  height: 1000rpx;
  background: rgba(255,255,255,0.9);
  box-shadow: 0px 20px20px rgba(0, 0, 0, 0.137);
  border-radius: 10rpx;   /*圆角半径*/
}

.theme{
  margin-top: 40rpx;
  width: 590rpx;
  height: 142rpx;
  border-bottom: 1rpx solid #d6d6d6;
}

.theme_title{
  width: 200rpx;
  height: 72rpx;
  color: #203152;
  font-family: "PingFangSC-Regular";
  font-size: 28rpx;
  font-weight: 450;
  line-height: 36rpx;
}


.inputBox{
  width: 590rpx;
  height: 50rpx;
  color: #030303;
  font-family: "PingFangSC-Regular";
  font-size: 40rpx;
  font-weight: 400;
  line-height: 50rpx;
}
.on{display: block}
.off{display: none}

.space1{
  width: 360rpx;
  height: 80rpx;
}
/* 提交按钮样式 （按钮样式与其他页面不一致需修改）*/
.submit{
  width: 590rpx !important;
  height: 110rpx !important;
  background: #5680fa;
  border-radius: 55rpx;   /*圆角半径*/
  color: white;
  padding: 0!important;
  margin-top: 10rpx!important;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 0 9rpx 3rpx rgba(0, 0, 0, 0.205)
}
.other-button-class{
  background-color:#5a83fdc4;
}
.submittext{
  display: flex;
  align-items: center;
  font-family: "PingFangSC-Semibold";
  font-size: 42rpx;
  font-weight: 400;
  line-height: 54rpx;
}