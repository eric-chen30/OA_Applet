/* pages/week/week.wxss */
.whole{
  background-color: #FAFAFA;
}
.first {
  /* display: flex; */
  padding-top: 20rpx;
}

.js {
  font-size: 60rpx;
  text-shadow: 0 0 6rpx rgb(160, 164, 170);
  font-style: PingFangSC-Semibold;
  color: #203152;
  margin-left: 5%;
  line-height:90rpx; 
  height: 160rpx;
  float: left;
}

/* fenlei */
.fenleiOne{
  /* display: inline; */
  background-color: white;
  height: 80rpx;
  width: 35%;
  line-height: 90rpx;
  align-items: center;
  margin: 0 auto;
  border-radius: 60rpx;
  border-bottom: 1rpx solid #5680fa;
}


.fenleiOne text{
  font-size: 30rpx;
  color: #5680fa;
  margin-left: 15rpx;
}


/* 下拉框 */
.select_box {
  /* background: white; */
  width: 100%;
  /* margin: 0 auto;  */
  height: 90rpx;
  line-height: 90rpx;
  text-align: left;
  position: relative;  
}

.select {
  box-sizing: border-box;
  width: 100%;
  height: 86rpx;
  border: 1px solid #5680fa; 
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  margin: 0 auto;
  box-shadow: 5rpx 5rpx 10rpx rgb(192, 189, 189);
}

.select_text {
  font-size: 28rpx;
  flex: 1;
  color: rgb(201, 191, 191);
  line-height: 36rpx;

}

.select_img {
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition: transform 0.3s;
}

.select_img_rotate {
  transform: rotate(180deg);
}

.option_box {
  position: absolute;
  top: 86rpx;
  width: 100%;
  /* border: 1px solid #efefef; */
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
  z-index: 100;
}

.option {
  display: block;
  line-height: 40rpx;
  font-size: 28rpx;
  border-bottom: 2rpx solid #efefef;
  padding: 10rpx;
  color: rgb(102, 102, 102);
}

.jia{
 
  background-color: #5680fa;
  height: 90rpx;
  width: 90rpx;
  float: right;
  margin-right: 5%;
  margin-top: -11%;
  border-radius: 50%;
  color: white;
  text-align: center;
  line-height: 80rpx;
  font-size: 80rpx;
  font-weight: 60rpx;
  /* box-shadow: 10rpx 10rpx 10rpx #888888; */
  box-shadow: 5rpx 5rpx 10rpx rgb(192, 189, 189);
 
}

.tip {
  color: gray;
  text-align: center;
  margin-top: 60rpx;
}

.search {
  display: flex;
  /* background-color: pink; */
  height: 110rpx;
  width: 90%;
  margin: 0 auto;
  border-radius: 60rpx;
  box-shadow: 0 0 6rpx #5F687E; 
  padding-bottom: 10rpx;
}
.search image {
  height: 40rpx;
  width: 40rpx;
  align-items: center;
  /* margin-left: 50rpx; */
  float: left;
  /* margin-left: -70rpx; */
  margin: auto 0 auto 50rpx;
}
.word {
  margin-left: 20rpx;
  margin-top: 30rpx;
  float: left;
  color: #0b1018;
}

.search input {
  bottom: 0;
  top: 0;
  height: 100%;
  width: 80%;
  margin-top: 0;
}


/* 中间列表 */
.main{
  display: flex;
  width: 100%;
  height: auto;
}
.detail{
  position: relative;
  padding-top: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-items: center;
  width: 1000rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
  margin-bottom: 26rpx;
  background: white;
  box-shadow: 5rpx 5rpx 5rpx #eee;
  border-radius: 35rpx;   /*圆角半径*/
}
.tips{
  position: absolute;
  left: 36%;
  top: 80rpx;
  color: gray;
  font-size: 36rpx;
}
.theme{
  width: auto;
  height: 142rpx;
  border-bottom: 1rpx solid #d6d6d6;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-bottom: 40rpx;
}

.theme_title{
  margin: 0 8rpx 20rpx 2rpx;
  color: #203152;
  font-family: "PingFangSC-Regular";
  font-size: 40rpx;
  font-weight: 400;
  line-height: 36rpx;
}

.inputBox{
  width: 590rpx;
  height: 50rpx;
  margin-top: 30rpx;
  color: #dbdada;
  font-family: "PingFangSC-Regular";
  font-size: 44rpx;
  font-weight: 400;
  line-height: 20rpx;
}

/* 底部导航栏 */
.tab {
  height: 168rpx;
  margin-top: 250rpx;
  position: fixed;
  width: 100%;
  bottom: 0;
  background-color: #fff;
}
/* 底部图标 */
.top {
  height: 120rpx;
  background-color: #fff;
  display: flex;
}
.top .average {
  width: 44rpx;
  height: 44rpx;
  margin: auto;
}
#ico image{
  margin: 20rpx auto;
}
