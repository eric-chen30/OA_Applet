/**Landed.wxss**/

/* 顶部 */
.user {
  position: relative;
  text-align: center;
  padding: 18% 1%;
  width: 100%;
}
.user image {
  height: 278rpx;
  width: 278rpx;
  margin-bottom: 12%;
  border-radius: 50%;
  border: 14rpx solid #fff;
  position: relative;
  left: center;
  box-shadow:0 6rpx 20rpx gray;
}
/* 图片下名字 */
.word {
  position: relative;
  width: 100%;
  left: center;
  overflow: hidden;
  font-family: "PingFangSC-Regular";
}
.t {
  font-size: 44rpx;
  color: #203152;
  line-height: 68rpx;
  text-align: center;
}
.b {
  font-size: 30rpx;
  color: #7C8698;
  text-align: center;
  font-weight: bold;
}

/* 中部 */
.social {
  height: 12%;
  width: 90%;
  top: 60%;
  position: fixed;
  display: grid;
  grid-template-columns: 1fr 1fr;
  text-align: center;
  justify-content: space-around;
  left: 5%;
  border-radius:20rpx;
  box-shadow:0 3px 10px gray;
  font-family: "PingFangSC-Regular";
}
/* 左 */
.px {
  flex: 1;
  position: relative;
}
.px :nth-child(1) {
  position: absolute;
  top: 15%;
  left: 46%;
  font-size: 46rpx;
  color: #203152;
}
.px :nth-child(2) {
  position: absolute;
  top: 55%;
  left: 40%;
  font-size: 32rpx;
  color: #7C8698;
}
