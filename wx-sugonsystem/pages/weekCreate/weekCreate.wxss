/* pages/weekCreate/weekCreate.wxss *//* pages/createWeek/createWeek.wxss */
@import "../../iconfont.wxss";
.main{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: auto;
  justify-content: center;
  align-items: center;
  background-color: #FAFAFA;
  padding-bottom: 20rpx;
}

.faqi{
  display: flex;
  flex-direction: column;
  align-items: center;
  width:100%;
  height: 100%;
}

.title {
  width: 590rpx;
  height: 90rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  /* margin-top: 20rpx; */
}

.a1{
  width: 590rpx;
  height: 80rpx;
  color: #203152;
  font-family: "PingFangSC-Regular";
  font-size: 60rpx;
  font-weight: 400;
  line-height: 80rpx;
  text-align: center;
}
.time {
  display: flex;
  flex-direction: column;
  margin-top: 22rpx;
  align-items: center;
  width: 660rpx;
  height: 60rpx;
  background: rgba(255,255,255,0.9);
  box-shadow: 0px 20px 20px rgba(0,0,0,0.05);
  border-radius: 10rpx;   /*圆角半径*/
  padding: 10px;
}
.timeinput{
  width:660rpx;
  height: 50rpx;
  font-size: 34rpx;
  font-weight: 400;
  line-height: 50rpx;
}

.form {
  display: flex;
  flex-direction: column;
  margin-top: 22rpx;
  align-items: center;
  width: 660rpx;
  height: 225rpx;
  background: rgba(255,255,255,0.9);
  box-shadow: 4px 4px 10px rgba(201, 200, 200, 0.404);
  border-radius: 10rpx;   /*圆角半径*/
  padding: 10px;
}

.sign{
  display: flex;
  flex-direction: column;
  margin-top: 22rpx;
  align-items: center;
  color: gray;
  font-size: 13px;
  width: 660rpx;
  height: 70rpx;
  background: rgba(255,255,255,0.4);
  box-shadow: 4px 4px 10px rgba(201, 200, 200, 0.1);
  border-radius: 10rpx;   /*圆角半径*/
  padding: 10px;
}

.submit{
  width: 590rpx !important;
  height: 110rpx !important;
  background: #5680fa;
  border-radius: 55rpx;   /*圆角半径*/
  color: #fafafa;
  padding: 0!important;
  margin-bottom: 20rpx;
  margin-top: 40rpx!important;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 5rpx 5rpx 10rpx 0rpx rgba(52, 107, 226, 0.336);
}
.other-button-class{
  background-color:#5a83fdc4;
}
.submittext{
  display: flex;
  align-items: center;
  font-family: "PingFangSC-Semibold";
  font-size: 42rpx;
  font-weight: 550;
  line-height: 54rpx;
  letter-spacing:8rpx;
}

.input{
  display: block;
  width: 100%;
  height: 100%;
  font-size: 34rpx;
}